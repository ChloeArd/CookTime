{% extends 'base.html.twig' %}

{% block title %}{% trans %}Register{% endtrans %}{% endblock %}

{% block body %}
    {{ parent() }}
    <main>
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="center title">{% trans %}Register{% endtrans %}</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'flexColumn'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr': {'class': 'flexColumn'}
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">{% trans %}Register{% endtrans %}</button>
        {{ form_end(registrationForm) }}
    </main>

{% endblock %}
